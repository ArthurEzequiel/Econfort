<!doctype html>
<html lang="pt-br">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">
    <link rel="icon" type="image/x-icon" href="assets/Logo_white.png">

    <link rel="stylesheet" href="fonts/icomoon/style.css">

    <link rel="stylesheet" href="css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
  
    
    <!-- Style -->
    <link rel="stylesheet" href="css/style2.css">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="css/style-loginuser.css">

    <title>Cadastro</title>
  </head>
<body>

<% if(cadastrar==0) {%>
  <div class="d-lg-flex half">
    <div class="bg order-1 order-md-1" style="Background-repeat: no-repeat; Background-size:; background-image: url('images/forclient.svg"></div>
    <div class="contents order-2 order-md-1">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7">
            <h3 style="display:flex; justify-content:center; font-size:2rem;"> <b> Olá! </b> <br></h3>
            <h3 style="display:flex; justify-content:center; font-size:1.3rem;">Faça Login no nosso <br> sistema!<br></h3>
            <br>
            <form action="/loginclient" method="post">

              <div class="form-group first">
                <input type="text" class="form-control" placeholder="E-mail" 
                name="usuario"  id="usuario">
              </div>
              <br>
              
              <div class="form-group last mb-4">
                <input type="password" class="form-control" placeholder="Sua senha" name="senha" id="senha">
              </div>
              <br>
              <div class="d-flex mb-5 align-items-center">
                <span class="ml-auto"><a href="/registercliente" class="forgot-pass">Não tem uma conta? Faça o seu cadastro!</a></span> 
              </div>

       
              <button type="submit" class="btn-primary1">
                <b>Log-in</b>
               </button>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%}%>

  <% if(cadastrar==1) {%>
    <div class="d-lg-flex half">
      <div class="bg order-1 order-md-1" style="Background-repeat: no-repeat; Background-size:; background-image: url('images/forclient.svg"></div>
      <div class="contents order-2 order-md-1">
  
        <div class="container">
          <div class="row align-items-center justify-content-center">
            <div class="col-md-7">

              <h3 style="display:flex; justify-content:center; font-size:2rem; "> <b> Olá! </b> <br></h3>
              <h3 style="display:flex; justify-content:center; font-size:1.2rem; ">Faça o cadastro no nosso <br> sistema!<br></h3>
              <br>

              <form action="/registrarclient" method="post">
                <div class="form-group first"> 
                  <input type="text" class="form-control" placeholder="Nome" name="nomeclient" id="nomeclient" required>
                </div>
                <br>
                <div class="form-group first">
    
                  <input type="text" class="form-control" placeholder="Sobrenome" name="sobrenomeclient" id="sobrenomeclient" required>
                </div>
                <br>
                <div class="form-group first">
                  <input type="text" class="form-control" placeholder="Endereço" name="endereco" id="endereco" required>
                </div>
                <br>
                <div class="form-group first">
                  <input type="text" class="form-control" placeholder="E-mail" name="usuarioclient" id="usuarioclient" required>
                </div>
                <br>
                <div class="form-group last mb-3">
                  <input type="password" class="form-control" placeholder="Senha" name="senhaclient" id="senhaclient" required>
                </div>

                <div class="form-group last mb-3">
                  <input type="password" class="form-control" placeholder="Confirme sua senha" name="senhaclient2" id="senhaclient2" required>
                </div>
                <br>


                <div class="d-flex mb-5 align-items-center">
               

                  <span class="ml-auto"><a href="/register" class="forgot-pass">Já tem uma conta? Faça Log-in!</a></span> 
                </div>
             
                <button type="submit" class="btn-primary1">
                 <b>Cadastrar</b>
                </button>
           
  
              </form>
            </div>
          </div>
        </div>
      </div>
  
      
    </div>
    <%}%>
    <script src="js/jquery.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/mains.js"></script>
  </body>
</html>